
.tab-nav
  background white
  position fixed
  z-index 99
  left 0
  width 100%

  &.top
    padding 13px 15px 0
    box-shadow 0 1px 5px 0 rgba(0,0,0,.2)
    top 0
    margin-top 57px

    a
      padding-bottom 13px
      border-bottom 5px solid t


  &.bottom
    padding 0 15px 13px
    box-shadow 0 -1px 5px 0 rgba(0,0,0,.2)
    bottom 0

    a
      padding-top 13px
      border-top 5px solid t

  a
    @extend .tdn, .transition
    width 100%
    display inline-block
    color blacky

    &:hover, &:active, &:focus
      border-color green
      color green

    i, span
      display block

    i
      font-size 25px
